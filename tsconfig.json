{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "lib",
        "newLine": "lf",
        "incremental": false,
        "allowJs": false,
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules", "lib", "test", "example"]
}
