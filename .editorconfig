root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
max_line_length  = 120
indent_style = space
indent_size = 2

[*.{js}]
indent_style = space
indent_size = 2

[*.{json}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
